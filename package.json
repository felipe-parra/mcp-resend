{
  "name": "mcp-resend",
  "version": "1.0.0",
  "description": "A tool for resending emails using Resend API",
  "main": "index.js",
  "type": "module",
  "bin": {
    "mcp-resend": "build/index.js"
  },
  "scripts": {
    "build": "tsc && npm run build:set-permissions",
    "build:prod": "tsc && npm run build:set-permissions",
    "build:dev": "tsc && npm run build:set-permissions",
    "build:set-permissions": "chmod 755 build/index.js",
    "dev": "tsx src/index.ts",
    "start": "node build/index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": {
    "name": "Felipe Parra",
    "url": "https://github.com/felipeparra"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/felipeparra/mcp-resend.git"
  },
  "license": "ISC",
  "packageManager": "pnpm@10.15.0",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.2",
    "resend": "^6.1.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@types/node": "^24.5.2",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
